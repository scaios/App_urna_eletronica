<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- estado pressionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1565C0"/> <!-- azul mais escuro -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <!-- estado normal -->
    <item>
        <shape>
            <solid android:color="#2196F3"/> <!-- azul normal -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>
